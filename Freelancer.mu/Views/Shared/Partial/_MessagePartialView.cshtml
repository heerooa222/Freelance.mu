@model Services.Freelancer.Models.MessageViewModel

@if (Model != null)
{
    foreach (var message in Model.Messages)
    {
        if (message.IsMe)
        {
            <div class="media w-50 ml-auto mb-3">
                <div class="media-body">
                    <div class="bg-primary rounded py-2 px-3 mb-2">
                        <p class="text-small mb-0 text-white">@message.Message</p>
                    </div>
                    <p class="small text-muted">@message.DisplayMessage</p>
                </div>
            </div>
        }
        else
        {
            <div class="media w-50 mb-3">
                <img src="https://bootstrapious.com/i/snippets/sn-chat/avatar.svg" alt="user" width="50" class="rounded-circle">
                <div class="media-body ml-3">
                    <div class="bg-light rounded py-2 px-3 mb-2">
                        <p class="text-small mb-0 text-muted">@message.Message</p>
                    </div>
                    <p class="small text-muted">@message.DisplayMessage</p>
                </div>
            </div>
        }
    }
}