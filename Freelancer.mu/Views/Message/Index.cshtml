@model Services.Freelancer.Models.MessageViewModel

@{
    ViewBag.Title = "Messenger";
}

<link rel="stylesheet" type="text/css" href="/css/chat.css">

<div class="container py-5 px-4">

    <div class="row rounded-lg overflow-hidden shadow">
        <!-- Users box-->
        <div class="col-5 px-0">
            <div class="bg-white">

                <div class="bg-gray px-4 py-2 bg-light">
                    <p class="h5 mb-0 py-1">Recent</p>
                </div>

                <div class="messages-box">
                    @{
                        await Html.RenderPartialAsync("Partial/_UserMessagePartialView");
                    }
                </div>
            </div>
        </div>
        <!-- Chat Box-->
        <div class="col-7 px-0">
            <div class="px-4 py-5 chat-box bg-white" id="message-section">
                @{
                    await Html.RenderPartialAsync("Partial/_MessagePartialView");
                }
            </div>
            <!-- Typing area -->
            <div class="bg-light">
                <div class="input-group">
                    <input type="text" id="comment-message" placeholder="Type a message" aria-describedby="send-button" class="form-control rounded-0 border-0 py-4 bg-light">
                    <div class="input-group-append">
                        <button id="send-button" type="submit" class="btn btn-link">
                            <i class="fa fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>