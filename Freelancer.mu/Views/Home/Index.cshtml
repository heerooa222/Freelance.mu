@model Services.Freelancer.Models.FrontOffice.HomeModel

@{
    ViewData["Title"] = "Home";
	Layout = "_Layout";
}

<div class="dez-bnr-inr dez-bnr-inr-md" style="background-image:url(/images/main-slider/slide2.jpg);">
    <div class="container">
        <div class="dez-bnr-inr-entry align-m ">
			<div class="find-job-bx">
				<p class="site-button button-sm">Find Jobs, Employment & Career Opportunities</p>
				<h2>Search Between More Them <br/> <span class="text-primary">50 000</span> Open Jobs.</h2>
				<form class="dezPlaceAni">
					<div class="row">
						<div class="col-lg-4 col-md-6">
							<div class="form-group">
								<label>Enter keyword</label>
								<div class="input-group">
									<input type="text" class="form-control" placeholder="">
									<div class="input-group-append">
									  <span class="input-group-text"><i class="fa fa-search"></i></span>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-md-6">
							<div class="form-group">
								<select>
									<option>Skills</option>
									@foreach (var competence in Model.Competeces)
									{
										<option value="@competence.IdCompetence">@competence.CompetenceName</option>
									}
								</select>
							</div>
						</div>
						<div class="col-lg-4 col-md-6">
							<button type="submit" class="site-button btn-block">Search</button>
						</div>
					</div>
				</form>
			</div>
		</div>
    </div>
</div>

<div class="section-full job-categories content-inner-2 bg-white" style="background-image:url(/images/pattern/pic1.html);">
	<div class="container">
		<div class="section-head d-flex head-counter clearfix">
			<div class="mr-auto">
				<h2 class="m-b5">Popular Categories</h2>
				<h6 class="fw3">20+ Categories work waiting for you</h6>
			</div>
			<div class="head-counter-bx">
				<h2 class="m-b5 counter">@Model.NbOffres</h2>
				<h6 class="fw3">Jobs Posted</h6>
			</div>
			<div class="head-counter-bx">
				<h2 class="m-b5 counter">@Model.NbEmployers</h2>
				<h6 class="fw3">Companies</h6>
			</div>
			<div class="head-counter-bx">
				<h2 class="m-b5 counter">@Model.NbCandidats</h2>
				<h6 class="fw3">Freelancers</h6>
			</div>
		</div>
	</div>
</div>

<div class="section-full bg-white content-inner-2">
	<div class="container">
		<div class="d-flex job-title-bx section-head">
			<div class="mr-auto">
				<h2 class="m-b5">Recent Jobs</h2>
				<h5 class="fw4 m-b0">@Model.Projects.Count Recently Added Jobs</h5>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-9">
				<ul class="post-job-bx">
					@foreach (var project in Model.Projects)
					{
						<li>
							<a href="/projet/detail?projetid=@project.IdProject">
								<div class="d-flex m-b30">
									<div class="job-post-company">
										<span><img src="images/logo/icon1.png"/></span>
									</div>
									<div class="job-post-info">
										<h4>@project.Title</h4>
										<ul>
											<li><i class="fa fa-map-marker"></i> @project.AddedBy</li>
											<li><i class="fa fa-calendar"></i> Apply before @project.ApplyBefore.ToString("dd MMMM yyyy")</li>
											<li><i class="fa fa-clock-o"></i> @project.TimeString</li>
										</ul>
									</div>
								</div>
								<div class="d-flex">
									<div class="job-time mr-auto">
										<span>@(project.IsOpen ? "Open" : "Closed")</span>
									</div>
									<div class="salary-bx">
										<span>@(String.Format("{0:0,0}", project.Price)) MUR</span>
									</div>
								</div>
								<span class="post-like fa fa-heart-o"></span>
							</a>
						</li>
					}
				</ul>
			</div>
			<div class="col-lg-3">
				<div class="sticky-top">
					<div class="candidates-are-sys m-b30">
						<div class="candidates-bx">
							<div class="testimonial-pic radius"><img src="images/testimonials/pic3.jpg" alt="" width="100" height="100"></div>
							<div class="testimonial-text">
								<p>I just got a job that I applied for via careerfy! I used the site all the time during my job hunt.</p>
							</div>
							<div class="testimonial-detail"> <strong class="testimonial-name">Richard Anderson</strong> <span class="testimonial-position">Nevada, USA</span> </div>
						</div>
					</div>
					<div class="quote-bx">
						<div class="quote-info">
							<h4>Make a Difference with Your Online Resume!</h4>
							<p>Your resume in minutes with JobBoard resume assistant is ready!</p>
							<a href="/account/register" class="site-button">Create an Account</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>